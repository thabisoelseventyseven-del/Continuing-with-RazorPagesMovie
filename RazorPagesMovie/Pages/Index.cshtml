@page
@model IndexModel
@{
    ViewData["Title"] = "CapeNexis Movies";
}

<!-- HERO SECTION -->
<div class="hero-section position-relative text-white">

    <!-- Background Image -->
    <div class="hero-bg"></div>

    <!-- Overlay Gradient -->
    <div class="overlay"></div>

    <div class="hero-content container">
        <h1 class="display-3 fw-bold mb-4">Welcome to CapeNexis Movies</h1>
        <p class="lead mb-4">
            Stream the latest blockbusters, timeless classics, and exclusive content — anytime, anywhere.
        </p>

        <div class="d-flex gap-3">
            <a asp-page="/Movies/Index" class="btn btn-danger btn-lg px-4">Browse Movies</a>
            <a href="#" class="btn btn-outline-light btn-lg px-4">Subscribe Now</a>
        </div>
    </div>
</div>

<!-- FEATURED SECTIONS -->
<div class="container my-5">
    <h2 class="text-white mb-4">Popular Categories</h2>

    <div class="row g-4">

        <div class="col-md-3">
            <div class="category-card">
                <img src="https://m.media-amazon.com/images/I/71niXI3lxlL._AC_SY679_.jpg"
                     class="img-fluid rounded">
                <h5 class="mt-2 text-white text-center">Action</h5>
            </div>
        </div>

        <div class="col-md-3">
            <div class="category-card">
                <img src="https://m.media-amazon.com/images/I/81xBKE8z-UL._AC_SY679_.jpg"
                     class="img-fluid rounded">
                <h5 class="mt-2 text-white text-center">Comedy</h5>
            </div>
        </div>

        <div class="col-md-3">
            <div class="category-card">
                <img src="https://m.media-amazon.com/images/I/91zA6c3hbwL._AC_SY679_.jpg"
                     class="img-fluid rounded">
                <h5 class="mt-2 text-white text-center">Drama</h5>
            </div>
        </div>

        <div class="col-md-3">
            <div class="category-card">
                <img src="https://m.media-amazon.com/images/I/81Uwb3ki0jL._AC_SY679_.jpg"
                     class="img-fluid rounded">
                <h5 class="mt-2 text-white text-center">Sci-Fi</h5>
            </div>
        </div>

    </div>
</div>

<!-- CUSTOM CSS -->
<style>
    body {
        background-color: #0b0c10;
    }

    .hero-section {
        height: 85vh;
        display: flex;
        align-items: center;
        justify-content: start;
    }

    .hero-bg {
        background-image: url('https://wallpapers.com/images/hd/movie-collage-1920-x-1080-wallpaper-1g1tsh26ii78xg30.jpg');
        background-size: cover;
        background-position: center;
        filter: brightness(0.6);
        position: absolute;
        inset: 0;
        z-index: -2;
    }

    .overlay {
        background: linear-gradient(to right, rgba(0,0,0,0.9) 20%, rgba(0,0,0,0.2) 80%);
        position: absolute;
        inset: 0;
        z-index: -1;
    }

    .hero-content {
        max-width: 700px;
        margin-left: 50px;
    }

    h2 {
        font-weight: 600;
    }

    .category-card img {
        height: 260px;
        width: 100%;
        object-fit: cover;
        transition: transform .3s ease-in-out;
    }

        .category-card img:hover {
            transform: scale(1.05);
        }
</style>
