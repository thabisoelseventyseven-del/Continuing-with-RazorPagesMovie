@page
@model RazorPagesMovie.Pages.Movies.IndexModel

@{
    ViewData["Title"] = "Movie List";
}

<h1 class="mb-4">Movie List</h1>

<p>
    <a class="btn btn-success" asp-page="Create">Create New Movie</a>
</p>

<!-- FILTER BAR -->
<form method="get" class="mb-4">
    <div class="row g-3">

        <!-- Genre Dropdown -->
        <div class="col-md-3">
            <label class="form-label">Genre</label>
            <select asp-for="MovieGenre" asp-items="Model.Genres" class="form-select">
                <option value="">All</option>
            </select>
        </div>

        <!-- Category Dropdown -->
        <div class="col-md-3">
            <label class="form-label">Category</label>
            <select asp-for="MovieCategory" asp-items="Model.Categories" class="form-select">
                <option value="">All</option>
            </select>
        </div>

        <!-- Title Search -->
        <div class="col-md-4">
            <label class="form-label">Title</label>
            <input type="text" asp-for="SearchString" class="form-control" placeholder="Search by title..." />
        </div>

        <div class="col-md-2 d-flex align-items-end">
            <button type="submit" class="btn btn-primary w-100">Filter</button>
        </div>

    </div>
</form>

<!-- MOVIE TABLE -->
<table class="table table-striped table-hover">
    <thead class="table-dark">
        <tr>
            <th>@Html.DisplayNameFor(model => model.Movie[0].Title)</th>
            <th>@Html.DisplayNameFor(model => model.Movie[0].ReleaseDate)</th>
            <th>@Html.DisplayNameFor(model => model.Movie[0].Genre)</th>
            <th>@Html.DisplayNameFor(model => model.Movie[0].Category)</th>
            <th>@Html.DisplayNameFor(model => model.Movie[0].Price)</th>
            <th>@Html.DisplayNameFor(model => model.Movie[0].Rating)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Movie)
        {
            <tr>
                <td>@item.Title</td>
                <td>@item.ReleaseDate.ToShortDateString()</td>
                <td>@item.Genre</td>
                <td>@item.Category</td>
                <td>@item.Price</td>
                <td>@item.Rating</td>
                <td>
                    <a class="btn btn-sm btn-primary" asp-page="./Edit" asp-route-id="@item.Id">Edit</a>
                    <a class="btn btn-sm btn-info text-white" asp-page="./Details" asp-route-id="@item.Id">Details</a>
                    <a class="btn btn-sm btn-danger" asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
